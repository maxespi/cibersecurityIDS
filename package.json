{
  "name": "cibersecurity",
  "version": "1.0.0",
  "description": "A simple event logger application",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "npm run build-react && cross-env NODE_ENV=production electron-builder",
    "build-react": "webpack --mode=development",
    "build-react-prod": "webpack --mode=production",
    "dev": "concurrently \"npm run build-react -- --watch\" \"cross-env NODE_ENV=development electron .\"",
    "dev:mock": "concurrently \"npm run build-react -- --watch\" \"cross-env NODE_ENV=development ENABLE_MOCK_DATA=true USE_MOCK_GEOLOCATION=true electron .\"",
    "dev:server": "concurrently \"npm run build-react -- --watch\" \"cross-env NODE_ENV=development SIMULATE_WINDOWS_SERVER=true electron .\"",
    "setup-dev": "node scripts/setup-dev-environment.js",
    "watch-react": "webpack --mode=development --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "clean": "rimraf dist dist-app",
    "prebuild": "npm run clean && npm run type-check",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "build": {
    "appId": "com.yourdomain.eventlogger",
    "win": {
      "target": "nsis",
      "icon": "hacker.ico",
      "extraFiles": [
        {
          "from": "files/script",
          "to": "files/script"
        },
        {
          "from": "files/logs",
          "to": "files/logs"
        },
        {
          "from": "files/config",
          "to": "files/config"
        },
        {
          "from": "dist",
          "to": "dist"
        }
      ]
    },
    "directories": {
      "output": "dist-app"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.27.1",
    "@types/node": "^20.19.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.0",
    "electron": "^38.2.1",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.8.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7"
  }
}
